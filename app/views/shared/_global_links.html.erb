<% if logged_in? %>
 	<strong><%= current_user.login %></strong> | 
	<%= link_to "Dashboard", root_url %> | 
	<%= link_to I18n.t(:'txt.my_account'), profile_url(current_user) %> | 
	<% if admin? -%><%= link_to I18n.t(:'txt.administration'), admin_root_url %> | <% end -%>
	<%= link_to I18n.t(:'txt.log_out'), logout_url, :method => :delete %>
<% else %>
	<%= link_to I18n.t(:'txt.sign_up'), signup_url %> | 
	<%= link_to I18n.t(:'txt.log_in'), login_url %>
<% end %>